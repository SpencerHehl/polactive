{
    "name": "polactive",
    "version": "1.0.0",
    "description": "Typescript backend service used for the polactive site",
    "main": "index.js",
    "scripts": {
        "test": "mocha --package ./package.json --reporter spec && nyc mocha --package ./package.json",
        "test-local": "mocha --package ./package.json --reporter nyan",
        "build": "tsc",
        "start": "node ./dist/index.js",
        "lint:fix": "npm run lint -- --fix",
        "lint": "eslint src/**/*.ts",
        "branch": "powershell.exe -file branch.ps1",
        "prune": "npx git-removed-branches --prune --force"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/SpencerHehl/polactive"
    },
    "author": "Spencer Hehl",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/SpencerHehl/polactive/issues"
    },
    "mocha": {
        "require": [
            "ts-node/register/transpile-only",
            "source-map-support/register"
        ],
        "reporter": "mocha-junit-reporter",
        "spec": "src/**/*.spec.ts",
        "recursive": true
    },
    "nyc": {
        "extends": "@istanbuljs/nyc-config-typescript",
        "all": true,
        "check-coverage": true,
        "branches": 44,
        "functions": 31,
        "lines": 54,
        "reporter": [
            "cobertura",
            "text"
        ],
        "include": [
            "src/**/*.ts"
        ],
        "exclude": [
            "**/*.router.ts",
            "**/*.model.ts",
            "**/*.spec.factory.ts",
            "**/*.spec.ts",
            "**/*.spec.integration.ts",
            "**/*.interface.ts",
            "**/index.ts",
            "**/lib"
        ]
    },
    "homepage": "https://github.com/SpencerHehl/polactive#readme",
    "dependencies": {
        "@types/uuid": "^3.4.7",
        "bluebird": "^3.7.2",
        "body-parser": "^1.19.0",
        "express": "^4.17.1",
        "http": "0.0.0",
        "lodash": "^4.17.19",
        "node-cache": "^5.0.1",
        "request": "^2.88.0",
        "request-promise": "^4.2.4",
        "short-uuid": "^3.1.1",
        "uuid": "^3.4.0"
    },
    "devDependencies": {
        "@istanbuljs/nyc-config-typescript": "^1.0.1",
        "@types/body-parser": "^1.17.1",
        "@types/chai": "^4.2.11",
        "@types/express": "^4.17.1",
        "@types/lodash": "^4.14.149",
        "@types/mocha": "^5.2.7",
        "@types/node": "^12.12.21",
        "@types/node-cache": "^4.2.5",
        "@types/sinon": "^9.0.0",
        "@typescript-eslint/eslint-plugin": "^2.27.0",
        "@typescript-eslint/parser": "^2.27.0",
        "chai": "^4.2.0",
        "eslint": "^6.8.0",
        "eslint-config-prettier": "^6.10.1",
        "eslint-plugin-prettier": "^3.1.2",
        "istanbul-cobertura-badger": "^1.3.1",
        "mocha": "^7.1.1",
        "mocha-junit-reporter": "^1.23.1",
        "nyc": "^15.0.0",
        "prettier": "^2.0.4",
        "sinon": "^9.0.2",
        "source-map-support": "^0.5.16",
        "ts-node": "^8.5.4",
        "typescript": "^3.5.3"
    }
}
